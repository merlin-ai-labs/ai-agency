{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UseCaseBacklog",
  "description": "Output schema for use-case grooming flow",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier"
    },
    "generated_date": {
      "type": "string",
      "format": "date-time"
    },
    "prioritization_method": {
      "type": "string",
      "enum": ["rice", "wsjf"]
    },
    "use_cases": {
      "type": "array",
      "description": "Prioritized list of use-cases",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "priority_score": {"type": "number"},
          "reach": {"type": "number"},
          "impact": {"type": "number"},
          "confidence": {"type": "number"},
          "effort": {"type": "number"}
        }
      }
    },
    "artifacts": {
      "type": "array",
      "description": "GCS URLs for supporting artifacts",
      "items": {"type": "string"}
    }
  },
  "required": ["version", "tenant_id", "generated_date", "prioritization_method"]
}
