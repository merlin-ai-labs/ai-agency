{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MaturityAssessment",
  "description": "Output schema for maturity assessment flow",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version"
    },
    "tenant_id": {
      "type": "string",
      "description": "Tenant identifier"
    },
    "assessment_date": {
      "type": "string",
      "format": "date-time"
    },
    "scores": {
      "type": "object",
      "description": "Maturity scores by dimension",
      "additionalProperties": {
        "type": "number"
      }
    },
    "recommendations": {
      "type": "array",
      "description": "Prioritized list of recommendations",
      "items": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "description": {"type": "string"},
          "priority": {"type": "string", "enum": ["high", "medium", "low"]},
          "effort": {"type": "string"}
        }
      }
    },
    "artifacts": {
      "type": "array",
      "description": "GCS URLs for supporting artifacts",
      "items": {"type": "string"}
    }
  },
  "required": ["version", "tenant_id", "assessment_date"]
}
